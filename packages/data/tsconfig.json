{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "lib": [
      "es2020"
    ]
  },
  "include": [
    "src"
  ]
}
